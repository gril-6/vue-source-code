{
    "compilerOptions": {
        "target": "es2016", // 目标语法
        "module": "ESNext", // 模块格式
        "outDir": "dist", // 输出目录
        "sourceMap": true, // 采用    
        "moduleResolution": "node",
        "strict": false, //严格模式
        "resolveJsonModule": true, //解析json模块
        "esModuleInterop": true, // 允许通过es6语法引入commonjs模块
        "jsx": "preserve",
        "lib": [
            "esnext",
            "dom"
        ], // 支持的类库 esnext及dom
        "baseUrl": ".",
        "paths": {
            "@vue/*": [
                "packages/*/src"
            ]
        }
    }
}